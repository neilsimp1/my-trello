{
  "name": "my-trello",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:macos": "electron-packager . trello  --overwrite --asar --out=dist --prune --platform=darwin --arch=x64 --icon=trello.png",
    "build:linux": "electron-packager . trello --overwrite --out=dist --prune --platform=linux --arch=x64 --icon=trello.png",
    "build:windows": "electron-packager . trello --overwrite --asar --out=dist --prune --platform=win32 --arch=ia32 --icon=trello.png"
  },
  "repository": "https://github.com/neilsimp1/my-trello",
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^4.0.5",
    "electron-packager": "^13.1.0"
  },
  "dependencies": {
    "electron-config": "^2.0.0"
  }
}
